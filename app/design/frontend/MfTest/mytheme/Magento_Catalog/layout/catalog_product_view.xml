<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
      	<referenceContainer name="content">
	    	<container name="product.gallery.infomain" htmlTag="div" htmlClass="product_gallery_info" before="-" />
		<referenceContainer name="product.info.media">
			    	<block class="Magento\Catalog\Block\Product\View\Gallery" name="product.info.media.image" template="Magento_Catalog::product/gallery_grid.phtml" after="-"/> 
		</referenceContainer>	
	</referenceContainer>
	
	<move element="product.info.media" destination="product.gallery.infomain" before="-"/>	
         <move element="product.info.main" destination="product.gallery.infomain" after="-"/>	
    </body>
</page>
